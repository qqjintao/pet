<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ssh.model.Store" table="Store">
		<!-- 配置主键 -->
		<id name="id" column="id">
			<generator class="native" /> <!-- 配置的是自动增长标识列 -->
		</id>
		<property name="Store_code" column="Store_code"/>
		<property name="Store_name" column="Store_name"/>	
		<property name="Store_logo" column="Store_logo"/>
		<property name="Store_brand" column="Store_brand"/>
		<property name="Store_principal" column="Store_principal"/>
		<property name="Principal_phone" column="Principal_phone"/>
		<property name="Company_address" column="Company_address"/>
		<property name="Postcode" column="Postcode"/>
		<property name="Company_phone" column="Company_phone"/>
		<property name="Company_fax" column="Company_fax"/>
		<property name="Company_email" column="Company_email"/>
		<property name="Store_state" column="Store_state"/>
		<property name="Lasttime" column="Lasttime"/>
		<property name="Store_introduce" column="Store_introduce"/>
		<property name="Payment_explain" column="Payment_explain"/>
		<property name="Distribution_explain" column="Distribution_explain"/>
		<property name="Store_authentication" column="Store_authentication"/>
	</class>
</hibernate-mapping>