<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ssh.model.Product" table="Product">
		<!-- 配置主键 -->
		<id name="id" column="id">
			<generator class="native" /> <!-- 配置的是自动增长标识列 -->
		</id>
		<property name="Product_code" column="Product_code"/>
		<property name="Product_name" column="Product_name"/>	
		<property name="Member_price" column="Member_price"/>
		<property name="Store_code" column="Store_code"/>
		<property name="Product_state" column="Product_state"/>
		<property name="Subclass_code" column="Subclass_code"/>
		<property name="Product_until" column="Product_until"/>
		<property name="Product_introduce" column="Product_introduce"/>
	</class>
</hibernate-mapping>